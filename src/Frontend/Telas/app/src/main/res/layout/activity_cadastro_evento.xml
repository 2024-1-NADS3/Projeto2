<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroEvento">

    <ImageView
        android:id="@+id/iconVoltar01"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:contentDescription="Botão para voltar para a tela anterior"
        android:onClick="VoltarPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.040"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="208dp"
        android:layout_height="122dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="93dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_fecap" />

    <EditText
        android:id="@+id/evento"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:inputType="text"
        android:hint="Evento"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/cidade"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:inputType="text"
        android:hint="Cidade"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data" />

    <EditText
        android:id="@+id/logradouro"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:inputType="text"
        android:hint="Logradouro"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cidade" />

    <EditText
        android:id="@+id/numero"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:inputType="number"
        android:hint="Número"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logradouro" />

    <EditText
        android:id="@+id/data"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="9dp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:inputType="date"
        android:hint="Data"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evento" />

    <Button
        android:id="@+id/btnCadastrarEv"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="9dp"
        android:backgroundTint="#FCBA51"
        android:fontFamily="@font/poppins_bold"
        android:onClick="botaoCadastroEvento"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero" />

</androidx.constraintlayout.widget.ConstraintLayout>